{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": [
      "node_modules",
      "typings"
    ],
    "filesGlob": [
      "**/*.ts",
      "./typings/main.d.ts"
    ],
  "compileOnSave": false
}
